<UserControl x:Class="Coin_UI.AccountCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Coin_UI"
             mc:Ignorable="d" 
             d:DesignHeight="130" d:DesignWidth="300" MouseDown="UserControl_MouseDown">
    <Grid><Rectangle Fill="Azure" HorizontalAlignment="Left" Height="130" Stroke="Black" VerticalAlignment="Top" Width="300" Margin="5"/>
        <StackPanel>
            <Label x:Name="NAME" Content="NAME" FontSize="30" />
            <Label x:Name="pub_key" Content="PUBLIC KEY" FontSize="20" />
            <Label x:Name="Balance" Content="BALANCE" FontSize="20" />
        </StackPanel>
        
    </Grid>
</UserControl>
