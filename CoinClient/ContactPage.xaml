<UserControl x:Class="CoinClient.ContactPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoinClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Fill="White"/>
        <local:AmountSelector x:Name="amountWin" Visibility="Hidden"/>
        <StackPanel>
            <Label Content="Contacts" HorizontalAlignment="Center" FontSize="50"/>

            <ScrollViewer>
                <StackPanel x:Name="contactList">
                    
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
