<UserControl x:Class="CoinClient.AccountManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoinClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Fill="White"/>
        <StackPanel>

            <Label Content="Accounts " HorizontalAlignment="Center" FontSize="45"/>

            <ScrollViewer Margin="20" MaxHeight="300">
                <StackPanel x:Name="AccountList">
                </StackPanel>
                
            </ScrollViewer>

        </StackPanel>
        <local:AddAccount x:Name="AccAddWindow" Visibility="Hidden"/>
    </Grid>
</UserControl>
